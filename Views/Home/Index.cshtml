@{
    ViewData["Title"] = "Home Page";
}
@model CatJObModel

<!-- Search Start -->
<div class="container-fluid bg-primary mb-5 wow fadeIn" data-wow-delay="0.1s" style="padding: 35px;">
    <div class="container">
        <div class="row g-2">
            <div class="col-md-10">
                <div class="row g-2">

                    <h2 class="section-title">Search Jobs</h2>
                    <form asp-controller="Search" asp-action="SearchJob">
                        <div class="row">
                            <div class="col-md-5">
                                <!-- Adjusted column size to 6 for each search bar -->
                                <div class="form-group">
                                    <input asp-controller="Search" asp-action="SearchJob" name="JobTitle" type="text" class="form-control" placeholder="Search for jobs">
                                </div>
                            </div>
                            <div class="col-md-5">
                                <!-- Second column for the second search bar -->
                                <div class="form-group">
                                    <input asp-controller="Search" asp-action="SearchJob" name="CompanyName" type="text" class="form-control" placeholder="Search for company">
                                </div>
                            </div>
                            <div class="col-md-2">
                                <!-- Full width column for the button -->
                                <button type="submit" class="btn btn-primary btn-block">Search</button>
                            </div>
                        </div>
                    </form>
                    
                </div>
            </div>
           
        </div>
    </div>
</div>
<!-- Search End -->

<!-- Category Start -->
<div class="container-xxl py-5">
    <div class="container">
        <h1 class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">Explore By Category</h1>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var cat in Model.categoryModels)
            {
                <div class="col">
                    <a href="@Url.Action("CategoryJobDetail", "Category", new { id = cat.Id })" class="text-decoration-none">
                        <div class="card h-100 wow fadeInUp" data-wow-delay="0.1s">
                            <div class="card-body">
                                <i class="fa fa-3x fa-mail-bulk text-primary mb-4"></i>
                                <h6 class="card-title mb-3">@cat.CategoryName</h6>
                                <p class="card-text mb-0">12 Vacancy</p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</div>
<!-- Category End -->
