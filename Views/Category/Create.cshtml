@using jobPortal.Models.category
@model CategoryModel


<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> Category Create</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" >

            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                    
                        <div class="form-floating py-2 col-12">
                            <input asp-for="@Model.CategoryName" class="form-control border-0 shadow" />
                            <label asp-for="@Model.CategoryName" class="ms-2"></label>
                            <span asp-validation-for="@Model.CategoryName" class="text-danger"></span>
                        </div>

                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                <button type="submit" class="btn btn-primary form-control">Add Category</button>
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Category" asp-action="Create" class="btn btn-outline-primary border  form-control">
                                    Back to List
                                </a>
                            </div>
                        </div>


                    </div>
                </div>

            </div>

        </form>
    </div>
