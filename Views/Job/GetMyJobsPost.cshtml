@using jobPortal.Models.job
@model List<JobModel>

<div class="container">
    <h1 class="text-center mb-4">Available Jobs</h1>
    <div class="row">
        @foreach (var job in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@job.Title</h5>
                        <p class="card-text">@job.appUser.Name</p>
                        <a asp-controller="Job" asp-action="Detail" asp-route-id="@job.Id" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>